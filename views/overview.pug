extends base

block content 
    main.main
        .card-container
            each campaign in campaigns
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`${campaign.photoUrl}` alt=`${campaign.name}`)
                        h3.heading-tertirary
                            span= campaign.name
                    .card__details
                        //- h4.card__sub-heading Sub heading
                        p.card__text= campaign.description
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-map-pin')
                            span= campaign.location

                        //- // Unused data
                        //- .card__data
                        //-     svg.card__icon
                        //-         use(xlink:href='img/icons.svg#icon-calendar')
                        //-     span April 2021
                        //- .card__data
                        //-     svg.card__icon
                        //-         use(xlink:href='img/icons.svg#icon-flag')
                        //-     span 3 stops
                        //- .card__data
                        //-     svg.card__icon
                        //-         use(xlink:href='img/icons.svg#icon-user')
                        //-     span 25 people
                    .card__footer
                        p
                            span.card__footer-value= `From $${campaign.price}`
                        p.card__ratings
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-star')
                            | 
                            span.card__footer-value= `${campaign.rating}`
                            | 
                            span.card__footer-text by (-) users
                        a.btn.btn--green.btn--small(href='#') Details

